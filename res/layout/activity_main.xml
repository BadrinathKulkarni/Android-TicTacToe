<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        style="@style/header"
        android:text="NFC Demo" />

    <TableLayout
        android:id="@+id/TL"
        style="@style/table" >

        <TableRow style="@style/row" >

            <ImageView
                android:id="@+id/a1"
                style="@style/button"
                android:tag="0" />

            <ImageView
                android:id="@+id/b1"
                style="@style/button"
                android:tag="1" />

            <ImageView
                android:id="@+id/c1"
                style="@style/button"
                android:tag="2" />
        </TableRow>

        <TableRow style="@style/row" >

            <ImageView
                android:id="@+id/a2"
                style="@style/button"
                android:tag="3" />

            <ImageView
                android:id="@+id/b2"
                style="@style/button"
                android:tag="4" />

            <ImageView
                android:id="@+id/c2"
                style="@style/button"
                android:tag="5" />
        </TableRow>

        <TableRow style="@style/row" >

            <ImageView
                android:id="@+id/a3"
                style="@style/button"
                android:tag="6" />

            <ImageView
                android:id="@+id/b3"
                style="@style/button"
                android:tag="7" />

            <ImageView
                android:id="@+id/c3"
                style="@style/button"
                android:tag="8" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/reset"
        style="@style/menu_button"
        android:onClick="onReset"
        android:text="Reset" />

</LinearLayout>